></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const navbar = document.querySelector('.navbar');

        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.style.backgroundColor = 'rgba(0, 0, 0, 0.9)'; /* Darker on scroll */
            } else {
                navbar.style.backgroundColor = 'rgba(0, 0, 0, 0.7)'; /* Transparent when at the top */
            }
        });
    });
</script>
