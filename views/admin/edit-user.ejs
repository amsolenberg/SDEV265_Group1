<html lang="en">
  <!-- Include the head partial for metadata and styles -->
  <%- include('../partials/head.ejs') %>
<body>
  <!-- Include the navigation bar partial -->
  <%- include('../partials/nav.ejs') %>

  <!-- Display success or error messages if provided -->
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <div class="container mt-4">
    <!-- Page title -->
    <h1 class="text-center mb-4">Edit User</h1>

    <!-- Form for editing a user -->
    <form method="POST" action="/admin/users/<%= user._id %>?_method=PUT">
      <!-- User Name -->
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
      </div>

      <!-- User Email -->
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
      </div>

      <!-- User Role -->
      <div class="mb-3">
        <label for="userType" class="form-label">Role</label>
        <select class="form-control" id="userType" name="userType">
          <!-- Pre-select the current user role -->
          <option value="user" <%= user.userType === 'user' ? 'selected' : '' %>>User</option>
          <option value="admin" <%= user.userType === 'admin' ? 'selected' : '' %>>Admin</option>
        </select>
      </div>

      <!-- Submit and Cancel Buttons -->
      <button type="submit" class="btn btn-primary">Save Changes</button>
      <a href="/admin/users" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <!-- Include the footer partial -->
  <%- include('../partials/footer.ejs') %>
</body>
</html>
