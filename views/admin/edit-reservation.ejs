<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
<%- include('../partials/nav.ejs') %>
<% if (success && success.length > 0)
{ %>
    <div class="alert alert-success"><%= success %></div>
<% } %>
<% if (error && error.length > 0) { %>
    <div class="alert alert-danger"><%= error %></div>
<% } %>

<div class="container mt-4">
    <h1 class="text-center mb-4">Edit Reservation</h1>
    <form
            method="POST"
            action="/admin/reservations/<%= reservation._id %>?_method=PUT"
    >
        <div class="mb-3">
            <label for="serviceName" class="form-label">Service</label>
            <input
                    type="text"
                    class="form-control"
                    id="serviceName"
                    name="serviceName"
                    value="<%= reservation.serviceName %>"
                    required
            />
        </div>
        <div class="mb-3">
            <label for="date" class="form-label">Date</label>
            <input
                    type="date"
                    class="form-control"
                    id="date"
                    name="date"
                    value="<%= reservation.date.toISOString().split('T')[0] %>"
                    required
            />
        </div>
        <div class="mb-3">
            <label for="time" class="form-label">Time</label>
            <input
                    type="time"
                    class="form-control"
                    id="time"
                    name="time"
                    value="<%= reservation.time %>"
                    required
            />
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input
                    type="number"
                    class="form-control"
                    id="price"
                    name="price"
                    value="<%= reservation.price %>"
                    required
            />
        </div>
        <div class="mb-3">
            <label for="duration" class="form-label">Duration (minutes)</label>
            <input
                    type="number"
                    class="form-control"
                    id="duration"
                    name="duration"
                    value="<%= reservation.duration %>"
                    required
            />
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/admin/reservations" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<%- include('../partials/footer.ejs') %>
</body>
</html>
