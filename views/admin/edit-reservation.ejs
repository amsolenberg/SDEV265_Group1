<html lang="en">
  <!-- Include the head partial for metadata and styles -->
  <%- include('../partials/head.ejs') %>
  <body>
    <!-- Include the navigation bar partial -->
    <%- include('../partials/nav.ejs') %>

    <!-- Display success or error messages if provided -->
    <% if (success && success.length > 0) { %>
    <div class="alert alert-success"><%= success %></div>
    <% } %> <% if (error && error.length > 0) { %>
    <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <div class="container mt-4">
      <!-- Page title -->
      <h1 class="text-center mb-4">Edit Reservation</h1>

      <!-- Form for editing a reservation -->
      <form method="POST" action="/admin/reservations/<%= reservation._id %>?_method=PUT">
        <!-- Service Name -->
        <div class="mb-3">
          <label for="serviceName" class="form-label">Service</label>
          <input
            type="text"
            class="form-control"
            id="serviceName"
            name="serviceName"
            value="<%= reservation.serviceName %>"
            required
          />
        </div>

        <!-- Reservation Date -->
        <div class="mb-3">
          <label for="date" class="form-label">Date</label>
          <input
            type="date"
            class="form-control"
            id="date"
            name="date"
            value="<%= reservation.date.toISOString().split('T')[0] %>"
            <!--
            Pre-fill
            date
            --
          />
          required />
        </div>

        <!-- Reservation Time -->
        <div class="mb-3">
          <label for="time" class="form-label">Time</label>
          <input
            type="time"
            class="form-control"
            id="time"
            name="time"
            value="<%= reservation.time %>"
            <!--
            Pre-fill
            time
            --
          />
          required />
        </div>

        <!-- Reservation Price -->
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            class="form-control"
            id="price"
            name="price"
            value="<%= reservation.price %>"
            <!--
            Pre-fill
            price
            --
          />
          required />
        </div>

        <!-- Reservation Duration -->
        <div class="mb-3">
          <label for="duration" class="form-label">Duration (minutes)</label>
          <input
            type="number"
            class="form-control"
            id="duration"
            name="duration"
            value="<%= reservation.duration %>"
            <!--
            Pre-fill
            duration
            --
          />
          required />
        </div>

        <!-- Submit and Cancel Buttons -->
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/admin/reservations" class="btn btn-secondary">Cancel</a>
      </form>
    </div>

    <!-- Include the footer partial -->
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
