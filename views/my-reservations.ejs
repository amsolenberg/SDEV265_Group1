<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>

    <div class="container py-5 mt-5">
      <h1 class="display-4 text-center mb-4">My Reservations</h1>
      <p class="lead text-center">
        View and manage your upcoming appointments.
      </p>

      <% if (reservations.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Service</th>
              <th scope="col">Date</th>
              <th scope="col">Time</th>
              <th scope="col">Duration</th>
              <th scope="col">Price</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% reservations.forEach(reservation => { %>
            <tr>
              <td><%= reservation.serviceName %></td>
              <td><%= reservation.date %></td>
              <td><%= reservation.time %></td>
              <td><%= reservation.duration %> minutes</td>
              <td>$<%= reservation.price %></td>
              <td>
                <form
                  action="/reservations/<%= reservation._id %>?_method=DELETE"
                  method="POST"
                >
                  <button type="submit" class="btn btn-danger btn-sm">
                    Cancel
                  </button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="text-center">
        <p class="lead">You have no upcoming reservations.</p>
        <a href="/services" class="btn btn-primary">Book a Service</a>
      </div>
      <% } %>
    </div>

    <%- include('./partials/footer.ejs') %> <%-
    include('./partials/bootstrap.ejs') %>
  </body>
</html>
